@model SmartCityKyiv.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Логін";
}

<section class="center">
    <h2>Вхід</h2>
    <form asp-action="Login" asp-controller="Account" asp-antiforgery="true">
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div>
            <div class="form-group">
                <label asp-for="Email">Введіть ваш email:</label>
                <br>
                <input asp-for="Email" type="email" placeholder="example@gmail.com">
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Введіть ваш пароль:</label>
                <br>
                <input asp-for="Password" type="password" placeholder="••••••••">
                <span asp-validation-for="Password" />
            </div>
            <br>
            <br>
            <div class="form-group">
                <input type="submit" value="Ввійти" class="btn-primary">
            </div>
            <br>
            <div class="form-group">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn-primary">Відміна</a>
            </div>
        </div>
    </form>
    <br>
    <br>
</section>
