<main class="grid-container border-top">
    <nav class="page-nav">
        <a class="nav-entity" asp-controller="News" asp-action="Index"> 
          <img alt="Новини" src="~/img/image1.jpg"
          width="40" height="40">
          <p>Новини</p>
        </a> 
        <a class="nav-entity" asp-controller="Event" asp-action="Index">
          <img alt="Заходи" src="~/img/image9.jpg"
          width="40" height="40">
          <p>Заходи</p>
        </a>
        <a class="nav-entity" asp-controller="Home" asp-action="Covid">
          <img alt="COVID" src="~/img/image2.jpg"
          width="40" height="40">
          <p>Covid</p>
        </a>
        <a class="nav-entity" asp-controller="Map" asp-action="Parking">
          <img alt="Паркування" src="~/img/image3.jpg"
          width="40" height="40">
          <p>Паркування</p>
        </a>
        <a class="nav-entity" asp-controller="Map" asp-action="Batteries">
          <img alt="Батарейка" src="~/img/image4.jpg"
          width="40" height="40">
          <p>Батарейка</p>
        </a>
        <a class="nav-entity" asp-controller="Map" asp-action="Trash">
          <img alt="Сортування сміття" src="~/img/image6.jpg"
          width="40" height="40">
          <p>Сортування сміття</p>
        </a>
        <a class="nav-entity" asp-controller="Map" asp-action="Sport">
          <img alt="Спортивні майданчики" src="~/img/image8.jpg" 
          width="40" height="40">
          <p>Спортивні майданчики</p>
        </a>
        <a class="nav-entity" asp-controller="Map" asp-action="Parks">
          <img alt="Парки та рекреаційні зони" src="~/img/image5.jpg"
          width="40" height="40">
          <p>Парки та рекреаційні зони</p>
        </a>
        <a class="nav-entity" asp-controller="Home" asp-action="Services">
          <img alt="Сервіси Києва" src="~/img/image7.jpg"
          width="40" height="40">
          <p>Сервіси Києва</p>
        </a>
        <a class="nav-entity" asp-controller="Home" asp-action="War">
          <img alt="Інформація про війну в Києві" src="~/img/image10.jpg"
          width="40" height="40">
          <p>Інформація про війну в Києві</p>
        </a>
      </nav>
    <section class="mainpage center">

        <section>
            <a asp-controller="News" asp-action="Index">
                <h2>Останні новини</h2>
            </a>
            @foreach (var article in Model.Articles)
            {
            <section class="news-box">
                <a asp-controller="News" asp-action="Article" asp-route-id="@article.Id">
                    <h2 class="news-header">@article.Title</h2>
                </a>
                <p class="event-date"><i>@article.PublicationDate</i></p>
                <p>
                @if (article.Text is not null)
                {
                    @article.Text.Split(new char[] { ' ', '\n' }).Take(Math.Min(8, article.Text.Split(new char[] { ' ', '\n' }).Length)).Aggregate((s1, s2) => s1 + " " + s2)
                    @if (article.Text.Split(new char[] { ' ', '\n' }).Length > 8)
                    {
                        <text>...</text>
                    }
                }
                </p>
            </section>
            }

        </section>
        <section>
            <a asp-controller="Event" asp-action="Index">
                <h2>Останні заходи</h2>
            </a>
            @foreach (var Event in Model.Events)
            {
            <section class="news-box">
                <a asp-controller="Event" asp-action="Event" asp-route-id="@Event.Id">
                    <h2 class="news-header">@Event.Name</h2>
                </a>
                <p class="event-date"><i>@Event.DateFrom.Value.ToShortDateString()  @if (Event.DateTo.HasValue) { @String.Format("- {0}", Event.DateTo.GetValueOrDefault().ToShortDateString()); }</i></p>
                <p>
                @if (Event.Description is not null)
                {
                    @Event.Description.Split(new char[] { ' ', '\n' }).Take(Math.Min(8, Event.Description.Split(new char[] { ' ', '\n' }).Length)).Aggregate((s1, s2) => s1 + " " + s2);
                    @if (Event.Description.Split(new char[] { ' ', '\n' }).Length > 8)
                    {
                        <text>...</text>
                    }
                }
                </p>
            </section>
            }
        </section>
    </section>
</main>
