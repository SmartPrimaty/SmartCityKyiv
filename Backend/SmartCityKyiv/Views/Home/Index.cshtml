        {
        <section class="news-box">
            <a href="./news_page.html">
                <h2 class="news-header">@article.Title</h2>
            </a>
            <p class="news-text">@article.Text</p>
        </section>
        }
        
    </section>
    <section>
        <a href="./news_list.html">
            <h2>Останні заходи</h2>
        </a>
        @foreach (var Event in Model.Events)
        {
        <section class="news-box">
            <a href="./news_page.html">
                <h2 class="news-header">@Event.Name</h2>
            </a>
            <p class="news-text">@Event.Description</p>
        </section>
        }
    </section>
